<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Retour"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back"
        android:layout_width="114dp" />

    <TextView
        android:text="Langue de navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_boardlanguage"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="Sélectionnez la langue souhaitée"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_selectLanguage"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textAlignment="center" />

    <Button
        android:text="Français"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_fr"
        android:elevation="1dp"
        android:layout_marginTop="20dp" />

    <Button
        android:text="Anglais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_en" />

    <Button
        android:text="Allemand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_de" />

    <Button
        android:text="Modifier"
        android:layout_height="wrap_content"
        android:id="@+id/btn_edit"
        android:layout_width="222dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp" />

</LinearLayout>